{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/theme": ["./lib/theme"],
      "@/theme/*": ["./lib/theme/*"],
      "@/components/*": ["./components/*"],
      "@/providers": ["./providers"],
      "@/providers/*": ["./providers/*"],
      "@/lib": ["./lib"],
      "@/lib/*": ["./lib/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
